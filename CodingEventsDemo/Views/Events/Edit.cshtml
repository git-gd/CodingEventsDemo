<h1>Edit Event</h1>

<form method="post" action="/Events/Edit">
    <input type="hidden" value="@ViewBag.events.Id" name="Id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.events.Name" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" value="@ViewBag.events.Description" />
    </div>
    <input type="submit" value="Edit Event" />
</form>
